
@{
    ViewData["Title"] = "JobDesc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Job Opening Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <nav id="navbar-top" class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">HR Module</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="https://localhost:7044/ModelView/Home">Home<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact" href="https://localhost:7044/ModelView/ContactUs">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="about" href="https://localhost:7044/ModelView/Aboutus">About Us</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <form>
            <h2 class="mb-4">Employee Job Opening</h2>

            <div class="mb-3">
                <label for="jobName"  class="form-label">Job Name:</label>
                <input type="text" class="form-control" id="jobName" name="jobName" required>
            </div>
            
                <div id="jname"></div>

            <div class="mb-3">
                <label for="requiredSkills"  class="form-label">Required Skills:</label>
                <input type="text" class="form-control" id="requiredSkills" name="requiredSkills" required>
            </div>
            <div id="rskill"></div>

            <div class="mb-3">
                <label for="preferredQualifications"  class="form-label">Preferred Qualifications:</label>
                <input type="text" class="form-control" id="preferredQualifications" name="preferredQualifications">
            </div>
            <div id="pqua"></div>

            <div class="mb-3">
                <label for="minExperience" class="form-label">Minimum Experience (in years):</label>
                <input type="number" class="form-control" id="minExperience" name="minExperience" required>
            </div>
            <div id="minex"></div>

            <div class="mb-3">
                <label for="Salary" class="form-label">Salary Package (LPA):</label>
                <input type="number" class="form-control" id="Salary" name="Salary" required>
            </div>
            <div id="spac"></div>

            <div class="mb-3">
                <label for="validUpto" class="form-label">Valid Upto:</label>
                <input type="date" class="form-control" id="validUpto" name="validUpto" required>
            </div>
            <div id="vupto"></div>

            <div class="text-center">
                <button type="submit" id="SaveBtn" class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</body>
</html>

<script src="~/content/js/Hr module.js"></script>


