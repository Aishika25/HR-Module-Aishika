
@{
    ViewData["Title"] = "EmpDtl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head> 
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Information Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <nav id="navbar-top" class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">HR Module</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ">
                    <a class="nav-link" href="https://localhost:7044/ModelView/Home">Home<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="contact" href="https://localhost:7044/ModelView/ContactUs">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="about" href="https://localhost:7044/ModelView/Aboutus">About Us</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <form>
            <h2 class="mb-4">Employee Personal Details</h2>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                    <span class="text-danger" id="ename"></span>
                </div>


                <div class="col-md-6">
                    <label for="dob" class="form-label">Date of Birth:</label>
                    <input type="date" class="form-control" id="dob" name="dob" required>
                    <span class="text-danger" id="edob"></span>
                </div>

            </div>


            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="gender" class="form-label">Gender:</label>
                    <select class="form-select" id="gender" name="gender" required>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                    <span class="text-danger" id="egender"></span>
                </div>


                <div class="col-md-6">
                    <label for="mobile" class="form-label">Mobile Number:</label>
                    <input type="text" class="form-control" id="mobile" name="mobile" required>
                    <span class="text-danger" id="mob"></span>
                </div>

            </div>


            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email" required>
                <span class="text-danger" id="mail"></span>
            </div>


            <div class="mb-3">
                <label for="address" class="form-label">Address:</label>
                <textarea class="form-control" id="address" name="address" rows="4" required></textarea>
                <span class="text-danger" id="add"></span>

            </div>


            <h2 class="mb-4">Bank Details</h2>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="bankName" class="form-label">Bank Name:</label>
                    <input type="text" class="form-control" id="bankName" name="bankName" required>
                    <span class="text-danger" id="bankdtl"></span>

                </div>


                <div class="col-md-6">
                    <label for="accountHolderName" class="form-label">Account Holder Name:</label>
                    <input type="text" class="form-control" id="accountHolderName" name="accountHolderName" required>
                    <span class="text-danger" id="acc"></span>

                </div>

            </div>


            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="ifscCode" class="form-label">IFSC Code:</label>
                    <input type="text" class="form-control" id="ifscCode" name="ifscCode" required>
                    <span class="text-danger" id="ifsc"></span>

                </div>


                <div class="col-md-6">
                    <label for="accountNumber" class="form-label">Account Number:</label>
                    <input type="text" class="form-control" id="accountNumber" name="accountNumber" required>
                    <span class="text-danger" id="accno"></span>

                </div>

            </div>


            <div class="text-center">
            <button type="submit" id="SaveEmp" class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

</body>
</html>

<script src="~/content/js/hrempjavascript.js"></script>


